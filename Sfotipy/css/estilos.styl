	.title 
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.menu
	display none
.relative
	position relative
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
