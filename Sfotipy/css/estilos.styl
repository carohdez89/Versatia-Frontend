@import "normalize.styl"
@import "fonts.styl"
@import "nib"
vendor-prefixes = webkit o ms moz official

// animacion(parametro)
// 	-webkit-animation parametro
// 	-ms-animation parametro
// 	-moz-animation parametro
// 	-o-animation parametro
// 	animation parametro

gris_oscuro = #333333
gris_claro = #818181
rojo= #BD255B
gris_mas_lindo=#F0F0F0

/*h1
	color red

nav
	background blue
	ul
		li
			display inline*/
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure 
	margin 0
img
	vertical-align top 
	// Esto es para alinear imagenes de modo vertical-align
ul
	margin 0
	padding 0	

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.border-bottom
	border-bottom 1px solid gris_claro

.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white 
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin 0
	&.gray
		color gris_claro
.actions 
	position absolute
	bottom 0
	right 0
	left 0
	background rgba(black,.3)
	// Negro al 30% -> Opacidad
.name
	color gris_oscuro
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em


			
		
	
.header
	height 3.5em
/*	a
		display none*/
	.title 
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
.left
	float left
.logo
	display none
.right
	float right
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em	
.isotipo
		width 122px		
.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
.menu
	display block
	background gris_mas_lindo
	overflow hidden
	border-top 1px solid gris_claro
	.item
		float left
		list-style none
		
		a
			color gris_oscuro
			text-transform uppercase				
			cursor pointer
			padding 1em
			display block
			border-top 5px solid transparent
			&:hover
				border-top 5px solid gris_claro
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	//pseudoelementos
	&:after
		content ""
		border-left 7px solid transparent
		border-top 9px solid gris_claro
		border-right 7px solid transparent
		display inline-block
		margin-right .4em
		
.menu
	display none	
.padding
	padding 1em
.padding-tb
	padding 1em 0
.playlist
		display none
		width 21em
		padding 0 2em
		border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 14px
.progress
	margin 1em 0
	position relative
	// top y bottom
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
		
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%	
		margin 0 auto 
		//centrado	
	.state
		height 5px
		border-radius 5px
		background rojo
		width 30%
		position relative
		animation 10s state infinite linear
		// 30% de reproduccion de la cancion
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px
		animation 1s circle infinite
@keyframes state
	0% 
		width 0
		//margin
	100%
		width 100%
@keyframes circle
	0% 
		transform scale(1) 
	100%
		transform scale(2)
		opacity 0
.right-text
	text-align right
.relative
	position relative

.round
	border-radius 50%
	overflow hidden
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
/*.song:nth-child(even)
	margin-right 0
*/

p
	margin .5em 0
/*	margin top right bottom left
	margin top/bottom right/left*/
.playing
	&.small
		width 20em
		margin 0 auto
.wrap
	width 1000px

// MEDIA QUERIES
@media screen and (min-width:480px)
	// body
	// 	background red
	.song
		&:nth-child(even)
			margin-right 1em
	.image	
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
			
@media screen and (min-width:1000px)
	body
		background gris_mas_lindo
	.button-menu
		display none
	.playing
		padding-top 2em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.playlist
		display block
		width 21em
		padding 0 2em
		border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 14px
	.header
		height auto
		border none
		.title
			display none
	// .image
	// 	img
	// 		width auto
	.music
		width 32.5em
		float left
		.description
			display none
	.logo
	.playlist
		display block
		
